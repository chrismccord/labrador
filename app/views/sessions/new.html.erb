<% content_for :sidebar do %>
  <ul class="nav nav-list">
    <li class="nav-header">      
      <b><%= t('applications').capitalize %></b>
    </li>
  </ul>
  <ul class="nav nav-list" data-view="collections">
    <% @applications.each do |app| %>
      <li>
        <a href="<%= app_url(app) %>"><i class="icon-folder-close"></i> <%= app %></a>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="page-header">
  <h1><%= t('connect.title') %><small>PostgreSQL, MongoDB, MySQL, SQLite</small></h1>
</div>
<div class="row-fluid">
  <div class="span3"></div>
  <div class="span6">
    <%= form_tag sessions_path, method: "post", class: "form-horizontal", "data-name" => "new-session-form" do %>
      <div class="control-group">
        <label class="control-label" for="adapter"><%= t('connect.adapter') %></label>
        <div class="controls">
          <select name="session[adapter]" id="adapter" data-name="adapter-select">
            <option value="postgresql">PostgreSQL</option>
            <option value="mongodb">MongoDB</option>
            <option value="mysql">MySQL</option>
            <option value="sqlite">SQLite</option>
          </select>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="name"><%= t('connect.connection_name') %></label>
        <div class="controls">
          <input type="text" id="name" placeholder="<%= t('connect.connection_name_placeholder') %>" name="session[name]" />
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-postgresql data-mongodb data-mysql>
        <label class="control-label" for="host"><%= t('connect.host') %></label>
        <div class="controls">
          <input type="text" id="host" placeholder="<%= t('connect.host_placeholder') %>" name="session[host]" value="127.0.0.1" />
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-postgresql data-mongodb data-mysql>
        <label class="control-label" for="inputUserName"><%= t('connect.username') %></label>
        <div class="controls">
          <input type="text" id="inputUserName" placeholder="<%= t('connect.username_placeholder') %>" name="session[username]" />
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="inputPassword"><%= t('connect.database') %></label>
        <div class="controls">
          <input type="text" id="inputPassword" placeholder="<%= t('connect.database_placeholder') %>" name="session[database]" />
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-postgresql data-mongodb data-mysql>
        <label class="control-label" for="inputPassword"><%= t('connect.password') %></label>
        <div class="controls">
          <input type="password" id="inputPassword" placeholder="<%= t('connect.password_placeholder') %>" name="session[password]">
        </div>
      </div>
      <div class="control-group" data-adapter-dependent data-mysql>
        <label class="control-label" for="inputPassword"><%= t('connect.socket') %></label>
        <div class="controls">
          <input type="text" id="inputSocket" placeholder="<%= t('connect.socket_placeholder') %>" name="session[socket]" />
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn"><%= t('connect.title') %></button>
        </div>
      </div>
    <% end %>
  </div>
</div>